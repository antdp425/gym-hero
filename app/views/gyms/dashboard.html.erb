<% if flash.notice %>
   <div class="alert alert-danger text-center">
      <%= flash.notice %> <br>
   </div>
<% end %>

<div class="card-group">
   <div class="card border-primary text-center">
      <%= link_to "#{pluralize(@members.count, "<br /> Member")}".html_safe , members_path, class: "card-body counter"%>
   </div>
   <div class="card border-success text-center">
      <%= link_to "#{pluralize(@classes.count, "<br /> Class")}".html_safe , gym_classes_path, class: "card-body counter"%>
   </div>
   <div class="card border-dark text-center">
      <%= link_to "#{pluralize(@todays_classes.count, "<br /> Class")} Today".html_safe, todays_classes_path, class: "card-body counter"%>
   </div>
</div>

<hr>

<%= render partial: 'todays_classes', locals: {classes: @todays_classes} if @todays_classes.count > 0 %>