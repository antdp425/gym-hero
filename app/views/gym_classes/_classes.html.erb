<div class="float-right">
<%= link_to 'Create Class', new_gym_class_path, class: "btn btn-success align-right" %>
</div>

<h3 class="text-center">Classes</h3>
<div class="table-responsive">
   <table class="table table-striped table-bordered">
      <thead>
         <tr>
            <th scope="col">Name</th>
            <th scope="col">Duration(in Minutes)</th>
            <th scope="col">Actions</th>
         </tr>
      </thead>
      <tbody>
         <% classes.each do |c| %>
            <tr>
               <td><%= c.name %></td>
               <td><%= c.duration %></td>
               <td class="mb-0">
                  <%= link_to 'Add Session', new_gym_class_scheduled_class_path(c), class: "btn btn-sm btn-dark"%>
                  <%= link_to 'View', gym_class_path(c), class: "btn btn-sm btn-primary"%> 
                  <%= link_to 'Edit', edit_gym_class_path(c), class: "btn btn-sm btn-success"%> 
                  <%= link_to 'Delete Class', destroy_gym_class_path(c), method: :delete, class: "btn btn-sm btn-danger", data: {confirm: "Deleting this class will delete all of its scheduled sessions."} %>     
               </td>
            </tr>
         <% end %>
      </tbody>
   </table>
</div>